{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "repo definitions",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.synddf",
				"match": "\\b(Template|Description|Long Desciption|Info Line|Prompt)\\b"
			}]
		},
		"templates": {
			"name": "entity.name.type",
			"patterns": [
				"TBASEALPHA"
			]
		},
		"strings": {
			"name": "string.quoted.double.synddf",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.synddf",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ddf"
}