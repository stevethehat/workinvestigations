{
	"name": "synddf",
	"displayName": "Syn DDF",
    "description": "",
    "publisher": "ibcos",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.synddf",
		"onLanguage:synddf"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "synddf",
				"extensions": [
					".ddf",
					".DDF"
				]
			}
		],
		"commands": [
			{
				"command": "extension.synddf.fieldat",
				"title": "Syn DDF: Field @"
			}
		],
		"grammars": [
			{
				"language": "synddf",
				"scopeName": "source.ddf",
				"path": "./syntaxes/synddf.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Repository Info",
			"properties": {
				"synddf.repositoryRootFolder": {
					"type": "string",
					"default": null,
					"description": "Root rolder of the repository data"
				},
				"synddf.modelRootFolder": {
					"type": "string",
					"default": null,
					"description": "Root rolder of the generated models"
				},
				"synddf.showOveriddenSettings": {
					"type": "boolean",
					"default": null,
					"description": "Show overridden settings"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.26",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/lodash": "^4.14.121",
		"lodash": "^4.17.19"
	}
}
