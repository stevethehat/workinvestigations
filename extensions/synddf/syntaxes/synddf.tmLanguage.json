{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "repo definitions",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#templates"
		},
		{
			"include": "#names"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.synddf",
				"match": "\\b(Template|Description|Long Desciption|Info Line|Prompt)\\b"
			}]
		},
		"templates": {
			
			"patterns": [{
                "name": "entity.name.type",
                "match": "TBASEALPHA"
            }]
		},
		"names": {
			
			"patterns": [{
                "name": "entity.name.tag",
                "match": "Field"
            }]
		},
		"strings": {
			"name": "string.quoted.double.synddf",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.synddf",
					"match": "\\\\."
				}
            ]
        },            
		"types": {
			"name": "entity.name.type",
			"begin": "Template\\s+",
            "while": "[A-Z_]+",
            "patterns": []
		}
	},
	"scopeName": "source.ddf"
}