{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "repo definitions",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#templates"
		},
		{
			"include": "#names"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.synddf",
				"match": "\\b(Description|Long Desciption|Info Line|Prompt|Size|Report|Noview)\\b"
			}]
		},

		"names": {
			
			"patterns": [{
                "name": "entity.name.tag",
                "match": "^Field|Key|Structure|Template"
            }]
		},
		"strings": {
			"name": "string.quoted.double.synddf",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.synddf",
					"match": "\\\\."
				}
            ]
        },            
		"types": {
			"patterns": [
				{
					"name": "keyword.control.synddf",
					"begin": "\\sTemplate\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_]+"
						}
					]		
				}
			]
		}
	},
	"scopeName": "source.ddf"
}