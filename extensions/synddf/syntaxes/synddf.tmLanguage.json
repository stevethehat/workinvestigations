{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "repo definitions",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#templates"
        },
        {
            "include": "#numeric"
        },
		{
			"include": "#types"
		},
		{
			"include": "#names"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.synddf",
				"match": "\\b(Description|Long|Info Line|Prompt|Size|Report|Noview|Precision|Size|Uppercase|Method|Required|User|Text|Selection|List|ODBC|Name|NoAllow|Enumerated|Format|Font|Promptfont|Negative|Overlay|Noprompt|Position|NoODBC|Noallow|Default|Order|Dups|Insert|Modifiable|Segment|FIELD|Entries)\\b"
			}]
        },
        "numbers":{
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
		"names": {
			"patterns": [{
                "name": "entity.name.tag",
                "match": "^Field|Key|Structure|Template|Relation|Group|Endgroup|Format"
            }]
		},
		"strings": {
			"name": "string.quoted.double.synddf",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.synddf",
					"match": "\\\\."
				}
            ]
        },            
		"types": {
			"patterns": [
				{
					"name": "entity.name.tag",
					"begin": "^Field\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_0-9]+"
						}
					]		
				},
				{
					"name": "keyword.control.synddf",
					"begin": "\\sTemplate\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_0-9]+"
						}
					]		
				},
				{
					"name": "keyword.control.synddf",
					"begin": "\\sType\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_0-9]+"
						}
					]		
				},
				{
					"name": "keyword.control.synddf",
					"begin": "\\sParent\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_0-9]+"
						}
					]		
				},
				{
					"name": "keyword.control.synddf",
					"begin": "\\Overlay\\s+",
					"end": "\\s",
					"patterns": [
						{
							"name": "entity.name.type",
							"match": "[A-Z_0-9:]+"
						}
					]		
				}

			]
		}
	},
	"scopeName": "source.ddf"
}